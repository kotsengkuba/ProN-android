<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13" >

        <com.example.pron.Wheel
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="0.05" />

        <TextView
            android:id="@+id/cityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="61dp"
            android:clickable="true"
            android:onClick="searchCity"
            android:text="Quezon City"
            android:textSize="@dimen/bigtext" />

        <!-- <WebView
            android:id="@+id/webView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tempTextView"
            android:layout_weight="0.13" /> -->

        <TextView
            android:id="@+id/rainTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tempTextView"
            android:layout_below="@+id/tempTextView"
            android:layout_marginTop="32dp"
            android:text="45" />

        <TextView
            android:id="@+id/humidTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/cityTextView"
            android:layout_below="@+id/rainTextView"
            android:layout_marginTop="40dp"
            android:text="80%" />

        <android.widget.TextView
            android:id="@+id/tempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/humidTextView"
            android:layout_centerVertical="true"
            android:text="34Â°"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/bigtext" />

    </RelativeLayout>

