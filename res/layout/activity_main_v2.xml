<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13" >

        <TextView
            android:id="@+id/cityTextView"
            android:onClick="searchCity"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="61dp"
            android:text="Quezon City" />

        <TextView
            android:id="@+id/tempTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cityTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="34Â°"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/humidTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tempTextView"
            android:layout_alignBottom="@+id/tempTextView"
            android:layout_toRightOf="@+id/cityTextView"
            android:text="80%" />

        <TextView
            android:id="@+id/rainTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tempTextView"
            android:layout_alignBottom="@+id/tempTextView"
            android:layout_toLeftOf="@+id/cityTextView"
            android:text="45" />

        <WebView
            android:id="@+id/webView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tempTextView"
            android:layout_weight="0.13" />

    </RelativeLayout>

    <com.example.pron.TemperatureGraphDrawableView
        android:layout_width="wrap_content"
        android:layout_height="246dp"
        android:layout_weight="0.05" />

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="24dp" />

</LinearLayout>